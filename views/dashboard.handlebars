<h1>Dashboard</h1>
{{#if posts.length}}
    {{#each posts}}
        <div class="post">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <button onclick="location.href='/edit/{{this.id}}'">Edit</button>
        </div>
    {{/each}}
{{else}}
    <p>You have not posted anything yet.</p>
{{/if}}
<button onclick="location.href='/new-post'">Create New Post</button>
